<%- include('../common/header') %>
<div class="pc-container">
          <div class="pc-content">
            <!-- [ breadcrumb ] start -->
            <div class="page-header">
              <div class="page-block">
                <div class="row align-items-center">
                  <div class="col-md-12">
                    <ul class="breadcrumb">
                      <li class="breadcrumb-item"><a href="index.html">ADD Product</a></li>
                      <li class="breadcrumb-item"><a href="javascript: void(0)">ADD Product</a></li>
                      <li class="breadcrumb-item" aria-current="page">ADD Product</li>
                    </ul>
                  </div>
                  <div class="col-md-12">
                    <div class="page-header-title">
                      <h2 class="mb-0">ADD Product</h2>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <h4 class="mt-0 header-title">ADD Product Form</h4>
            <hr style="margin-bottom: 50px;background-color: darkgrey;">
            <div class="container mt-5">
                    <form action="/admin/add_product" method="post" enctype="multipart/form-data">
                      <div class="row mt-5">
                        <div class="form-group col-md-6">
                          <label for="category">Category:</label>
                          <select id="category" name="category_id" required>
                          <option value="">Select a category</option>
                          <!-- Yahan se dynamic category options aayenge -->
                          <% responce.forEach(function(category) { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                          <% }); %>
                          </select><br><br>
                        </div>
                      </div>
                        <div class="row mt-5">
                            <div class="form-group col-md-6">
                                <label for="name">Name <span style="color:red;">*</span></label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="form-group col-md-6">
                              <label for="name">Price <span style="color:red;">*</span></label>
                              <input type="text" class="form-control" id="name" name="price" required>
                          </div>
                          </div>
                            <div class="row mt-5">
                              <div class="form-group col-md-12">
                              <label for="images">Upload Images:</label><br>
                                        <input type="file" id="images" name="images" accept="image/*" multiple required><br><br>
                                    </div>
                              </div>
                              
                               <div class="row mt-5">
                                        <div class="form-group col-md-12">
                                                  <label for="name">Description <span style="color:red;">*</span></label>
                                                  <input type="text" class="form-control" id="name" name="description" required>
                                        </div>
                                              
                               </div>
                               <div class="row mt-5">
                                        <div class="form-group col-md-6">
                                                  <label for="exploreProduct">Explore Product:</label><br>
                                                  <input type="radio" id="exploreYes" name="exploreProduct" value="1">
                                                  <label for="exploreYes">Yes</label><br>
                                                  <input type="radio" id="exploreNo" name="exploreProduct" value="2">
                                                  <label for="exploreNo">No</label><br><br>             
                                        </div>
                                        <div class="form-group col-md-6">
                                                  <label for="exploreProduct">Weekly Dealis:</label><br>
                                                  <input type="radio" id="exploreYes" name="weekly_dealis" value="1">
                                                  <label for="exploreYes">Yes</label><br>
                                                  <input type="radio" id="exploreNo" name="weekly_dealis" value="2">
                                                  <label for="exploreNo">No</label><br><br>             
                                        </div>     
                               </div>
                               <div class="row mt-5">
                                        <div class="form-group col-md-6">
                                                  <label for="exploreProduct">Best Dealis:</label><br>
                                                  <input type="radio" id="exploreYes" name="best_dealis" value="1">
                                                  <label for="exploreYes">Yes</label><br>
                                                  <input type="radio" id="exploreNo" name="best_dealis" value="2">
                                                  <label for="exploreNo">No</label><br><br>             
                                        </div>
                                        <div class="form-group col-md-6">
                                                  <label for="exploreProduct">Mega Collection:</label><br>
                                                  <input type="radio" id="exploreYes" name="mega_collection" value="1">
                                                  <label for="exploreYes">Yes</label><br>
                                                  <input type="radio" id="exploreNo" name="mega_collection" value="2">
                                                  <label for="exploreNo">No</label><br><br>             
                                        </div>     
                               </div>
                            </div>
                        <div class="form-group mt-5">
                            <button type="submit" class="btn btn-primary" style="float: right;">Submit</button>
                        </div>
                    </form>
                </div>
          </div>
        </div>
        <%- include('../common/footer')%>       

